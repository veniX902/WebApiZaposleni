<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
</head>
<body>
    
    <header class="container">
        <div class="row text-center">
            <div class="col">
                <h1>Employees</h1>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            
                @RenderBody()
            
