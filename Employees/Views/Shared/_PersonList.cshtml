@using Employees.Models;

<div class="card">
    <div class="card-header">
        <h3>Employees:</h3>
    </div>
    <div class="card-body">
        <!-- form goes here -->
        @if (Attendance.GetAttendants().Count == 0)
        {
            <p>Currently there are no Employees... Add them!</p>
        }
        else
        {

            int counter = 0;

            <table class="table table-sm table-hover">
                @foreach(Person person in Attendance.GetAttendants())
                {
                    counter++;
                    <tr>
                        <td>@counter.</td>
                        <td>@person.FirstName @person.LastName</td>
                        <td>@person.BirthDate.ToString("dd/mm/yyyy")</td>
                    </tr>
                }
            </table>
        }
    </div>
</div>

